<div class="margin"></div>
{% if restaurant.phone? %}
    <a class="menus-number" href="tel:{{ restaurant.phone_uri }}">
      {{ restaurant.phone }}
    </a>
{% endif %}

{% for menu in menus %}
<section class="index-header" id="menu-{{ menu.id }}">
  <header>
    <a href="{{ menu.url }}">
      <h2 class="index-header__title">{{ menu.name }}</h2>
    </a>
  </header>
  <ol class="menus-nav">
    {% for child in menu.children %}
      <li class="menus-nav__item">
      <a href="{{ menu.url }}#menu-{{child.id}}" class="menus-nav__link">
        {% if child.main_image? %}
            {{ child.main_image | small_image_url | image_tag: 'class:menus-nav__image' }}
        {% endif %}
        <h4 class="menus-nav__title">
          {{ child.name }}
        </h4>
      </a>
      </li>
    {% endfor %}
  </ol>
</section>
{% endfor %}
