            {% for l in linklists[link.linklist_handle].links %}
            <li class="sub-nav__item">
              <a class="sub-nav__link" href="{{ l.url }}">{{ l.title }}</a>
            </li>
            {% endfor %}
          </ul>
        </li>
      {% endif %}
    {% endfor %}
      <li class="nav-small__item">
        {% for path in localized_page_paths %}
          <a class="nav-small__item-links" href="{{ path.url }}">
            <img alt="Flag-{{ path.locale_code }}" src="{{ path.flag_url }}" />
            <span>{{ path.locale_name }}</span>
