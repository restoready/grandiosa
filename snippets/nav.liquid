<div class="nav-large small--hide medium--hide">
  {% if restaurant.logo? %}
    <a href="{{ localized_root_path }}">
      <div class="nav-large__logo">{{ restaurant.logo_url | image_tag }}</div>
    </a>
  {% endif %}
  <a href="{{ localized_root_path }}">
    <h1 class="nav-large__name-resto">{{ restaurant.name }}</h1>
  </a>

  <ul class="nav-large__list">
    <li class="nav-large__item">
      <a class="nav-large__item-links" href="{{ localized_root_path }}" id="back-home">{{ "Accueil" | t }}</a>
    </li>
    {% for menu in menus %}
      <li class="nav-large__item">
        <a class="nav-large__item-links" href="{{ menu.url }}">{{ menu.name }}</a>
      </li>
    {% endfor %}
    <li class="nav-large__item">
      <a class="nav-large__item-links" href="{{ restaurant.url }}">{{ "Le restaurant" | t }}</a>
    </li>
    {% if theme_settings.display_contact_form %}
      <li class="nav-large__item">
        {% if contact_settings.navigation_label? %}
          <a class="nav-large__item-links" href="{{ restaurant.contact_path }}">{{ contact_settings.navigation_label }}</a>
        {% else %}
          <a class="nav-large__item-links" href="{{ restaurant.contact_path }}">{{ contact_settings.contact_title }}</a>
        {% endif %}
      </li>
    {% endif %}
    <li class="lang-switch nav-large__item">
      {% for path in localized_page_paths %}
        <a class="nav-large__item-links" href="{{ path.url }}">
          <img alt="Flag-{{ path.locale_code }}" src="{{ path.flag_url }}" />
          <span>{{ path.locale_name }}</span>
          <span style="float:none;"></span>
        </a>
      {% endfor %}
    </li>
  </ul>

  <div class="nav-large__coordinate">

    {% if restaurant.social_urls? %}
    <div class="social-nav">
      <ul class="social-nav__networks">
        {% if restaurant.facebook_url? %}
          <li class="social-nav__item">
            <a href="{{restaurant.facebook_url}}" class="social-nav__facebook">
              <div class="facebook"></div>
            </a>
          </li>
        {% endif %}
        {% if restaurant.twitter_url? %}
          <li class="social-nav__item">
            <a href="{{restaurant.twitter_url}}" class="social-nav__twitter">
              <div class="twitter"></div>
            </a>
          </li>
        {% endif %}
      </ul>
    </div>
  {% endif %}
  
    {% if restaurant.phone? %}
      <a class="nav-large__coordinate-number" href="tel:{{ restaurant.phone_uri }}">
          {{ restaurant.phone }}
      </a>
      </br>
    {% endif %}
    {% if restaurant.street_address? %}
      <span class="coordinate-address" itemprop="streetAddress">{{ restaurant.street_address }}</span>
      </br>
    {% endif %}
    {% if restaurant.zip_code? %}
      <span class="coordinate-address" itemprop="postalCode">{{ restaurant.zip_code }}</span>
    {% endif %}
    {% if restaurant.city? %}
      <span class="coordinate-address" itemprop="addressLocality">{{ restaurant.city }}</span>
    {% endif %}
  </div>
</div>

