      {% endif %}
      {% if restaurant.street_address? %}
        <span class="nav-small__coordinate-address" itemprop="streetAddress">{{ restaurant.street_address }}</span>
        </br>
      {% endif %}
      {% if restaurant.zip_code? %}
        <span class="nav-small__coordinate-address" itemprop="postalCode">{{ restaurant.zip_code }}</span>
      {% endif %}
      {% if restaurant.city? %}
        <span class="nav-small__coordinate-address" itemprop="addressLocality">{{ restaurant.city }}</span>
      {% endif %}
    </div>
  </div>
</div>
