{% if photo %}
  <div class="gallery-item grid-item small--one-whole medium--one-half large--one-third">
    {{ photo.image | small_image_url | image_tag: 'class:gallery-item__image' }}
    {% if photo.caption %}
      <figcaption class="gallery-item__caption">
        {{ photo.caption }}
      </figcaption>
    {% endif %}
  </div>
{% elsif restaurant.main_image? %}
  <div class="gallery-item">
    {{ restaurant.main_image | small_image_url | image_tag: 'class:gallery-item__main-image' }}
    {% if restaurant.main_image_caption %}
      <figcaption class="gallery-item__caption">
        {{ restaurant.main_image_caption? }}
      </figcaption>
    {% endif %}
  </div>
{% endif %}
