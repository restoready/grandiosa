{% if photo %}
  <div class="gallery-item grid-item small--one-whole medium--one-half large--one-third">
    {{ photo | small_image_url: 'photo' | image_tag: 'class:gallery-item__image' }}
    {% if photo.caption %}
      <figcaption class="gallery-item__caption">
        {{ photo.caption }}
      </figcaption>
    {% endif %}
  </div>
{% elsif current_tenant.main_photo? %}
  <div class="gallery-item">
    {{ current_tenant | small_image_url: 'main_photo' | image_tag: 'class:gallery-item__main-image' }}
    {% if current_tenant.main_photo_caption %}
      <figcaption class="gallery-item__caption">
        {{ current_tenant.main_photo_caption }}
      </figcaption>
    {% endif %}
  </div>
{% endif %}