<div class="tabs-wrapper">
  <input checked="checked" class="tab-head" id="tab1" name="tab" type="radio">
  <label for="tab1">
    Couleurs
  </label>
  <input class="tab-head" id="tab2" name="tab" type="radio">
  <label for="tab2">
    Typographies
  </label>
  <input class="tab-head" id="tab3" name="tab" type="radio">
  <label for="tab3">
    Images
  </label>
  <input class="tab-head" id="tab4" name="tab" type="radio">
  <label for="tab4">
    Modules
  </label>
  
  <div class="tab-body-wrapper">
    <div class="tab-body" id="tab-body-1">

      <fieldset>
        <legend>Couleur perso 1</legend>
        <div class="small-12 medium-6 large-4 columns">
          <input name="current[perso-color-1]" type="text" id="perso-color-1" value="{{ settings.perso-color-1 }}" class="minicolors">
        </div>
      </fieldset>

      <fieldset>
        <legend>Couleur perso 2</legend>
        <div class="small-12 medium-6 large-4 columns">
          <input name="current[perso-color-2]" type="text" id="perso-color-2" value="{{ settings.perso-color-2 }}" class="minicolors">
        </div>
      </fieldset>

      <fieldset>
        <legend>Couleur perso 3</legend>
        <div class="small-12 medium-6 large-4 columns">
          <input name="current[perso-color-3]" type="text" id="perso-color-3" value="{{ settings.perso-color-3 }}" class="minicolors">
        </div>
      </fieldset>

      <fieldset>
        <legend>Bordure navigation</legend>
        <div class="small-12 medium-6 large-4 columns">
          <input name="current[border]" type="text" id="border" value="{{ settings.border }}" class="minicolors">
        </div>
      </fieldset>

      <fieldset>
        <legend>Étiquette "Végétarien"</legend>
        <div class="small-12 medium-6 large-4 columns">
          <input name="current[back-label-vegan]" type="text" id="back-label-vegan" value="{{ settings.back-label-vegan }}" class="minicolors">
        </div>
      </fieldset>

      <fieldset>
        <legend>Étiquette "Pas de viande"</legend>
        <div class="small-12 medium-6 large-4 columns">
          <input name="current[back-label-meat]" type="text" id="back-label-meat" value="{{ settings.back-label-meat }}" class="minicolors">
        </div>
      </fieldset>

      <fieldset>
        <legend>Étiquette "Pas de porc"</legend>
        <div class="small-12 medium-6 large-4 columns">
          <input name="current[back-label-porc]" type="text" id="back-label-porc" value="{{ settings.back-label-porc }}" class="minicolors">
        </div>
      </fieldset>

      <fieldset>
        <legend>Prix</legend>
        <div class="small-12 medium-6 large-4 columns">
          <input name="current[back-price-value]" type="text" id="back-price-value" value="{{ settings.back-price-value }}" class="minicolors">
        </div>
      </fieldset>
    </div>

    <div class="tab-body" id="tab-body-2">
      <fieldset>
        <legend>Texte</legend>
        <div class="small-12 medium-6 large-4 columns">
          <select id="text_font" name="current[text_font]">
            <optgroup label="Google Web Fonts">
              <option value="{{ settings.text_font }}" selected>{{ settings.text_font | remove: 'Google+' | replace: '+', ' ' }}</option>
              <option value='Google+Cabin'>Cabin</option>
              <option value='Google+Raleway'>Raleway</option>
            </optgroup>
          </select>
        </div>
      </fieldset>

      <fieldset>
        <legend>Slogan</legend>
        <div class="small-12 medium-6 large-4 columns">
          <select id="slogan_font" name="current[slogan_font]">
            <optgroup label="Google Web Fonts">
              <option value="{{ settings.slogan_font }}" selected>{{ settings.slogan_font | remove: 'Google+' | replace: '+', ' ' }}</option>
              <option value='Google+Great+Vibes'>Great Vibes</option>
              <option value='Google+Lobster'>Lobster</option>
            </optgroup>
          </select>
        </div>
      </fieldset>
    </div>
    
    <div class="tab-body" id="tab-body-3">
      <fieldset>
        <legend>Images home page</legend>
        <div class="small-12 medium-6 large-4 columns">
          <label for="image-full-home">Image d'acceuil</label>
          <input name="" type="" id="" value="" class="">
        </div>

        <div class="small-12 medium-6 large-4 columns">
          <label for="image-presentation">Image block présentation</label>
          <input name="" type="" id="" value="" class="">
        </div>

        <div class="small-12 medium-6 large-4 columns end">
          <label for="slider-horaire">Image block horaire</label>
          <input name="" type="" id="" value="" class="">
        </div>
      </fieldset>

      <fieldset>
        <legend>Image page restaurant</legend>
        <div class="small-12 medium-6 large-4 columns">
          <input name="" type="text" id="" value="" class="">
        </div>
      </fieldset>
    </div>

    <div class="tab-body" id="tab-body-6">
      <fieldset>
        <legend>Modules</legend>
        <div class="small-12 medium-6 large-4 columns">
          {% if settings.footer_display_newsletter %}
            <input class="icheck-me" name="current[footer_display_newsletter]" id="footer_display_newsletter" type="checkbox" value="{{ settings.footer_display_newsletter }}" data-skin='black-green' checked/>
          {% else %}
            <input class="icheck-me" name="current[footer_display_newsletter]" id="footer_display_newsletter" type="checkbox" value="{{ settings.footer_display_newsletter }}" data-skin='black-green' />
          {% endif %}
          <label style="margin-right:.5em;" for="footer_display_newsletter">Afficher la newsletter</label>
        </div>

        <div class="small-12 medium-6 large-4 columns end">
          {% if settings.display_contact_form %}
            <input class="icheck-me" name="current[display_contact_form]" id="display_contact_form" type="checkbox" value="{{ settings.display_contact_form }}" data-skin='black-green' checked/>
          {% else %}
            <input class="icheck-me" name="current[display_contact_form]" id="display_contact_form" type="checkbox" value="{{ settings.display_contact_form }}" data-skin='black-green' />
          {% endif %}
          <label style="margin-right:.5em;" for="display_contact_form">Afficher le formulaire de contact</label>
        </div>
      </fieldset>
    </div>
  </div>
</div>
